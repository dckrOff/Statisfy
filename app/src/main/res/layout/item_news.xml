<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Изображение новости -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/img" />

        </androidx.cardview.widget.CardView>

        <!-- Заголовок новости -->
        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_semibold"
            android:maxLines="2"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            tools:text="Важная новость о развитии технологий в мире" />

        <!-- Краткое описание -->
        <TextView
            android:id="@+id/text_view_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter"
            android:maxLines="3"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp"
            tools:text="Краткое описание новости, которое дает представление о содержании статьи" />

        <!-- Метаинформация -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Категория -->
            <com.google.android.material.chip.Chip
                android:id="@+id/text_view_category"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                tools:text="Технологии" />

            <!-- Индикатор релевантности -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_relevant"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Релевантно"
                android:textColor="?attr/colorPrimary"
                android:textSize="10sp"
                android:visibility="gone"
                app:chipBackgroundColor="?attr/colorPrimaryContainer"
                tools:visibility="visible" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Дата публикации -->
            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                tools:text="2 часа назад" />

        </LinearLayout>

        <!-- Источник -->
        <TextView
            android:id="@+id/text_view_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/inter"
            android:gravity="center_vertical"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_source"
            tools:text="Источник: TechNews" />

        <!-- Кнопки действий -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Кнопка избранного -->
            <ImageButton
                android:id="@+id/button_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Добавить в избранное"
                android:padding="8dp"
                android:src="@drawable/ic_favorite_outline"
                app:tint="?attr/colorOnSurfaceVariant" />

            <!-- Кнопка поделиться -->
            <ImageButton
                android:id="@+id/button_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Поделиться"
                android:padding="8dp"
                android:src="@drawable/ic_share"
                app:tint="?attr/colorOnSurfaceVariant" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Кнопка "Читать далее" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_read_more"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Читать"
                android:textSize="12sp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:iconSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>