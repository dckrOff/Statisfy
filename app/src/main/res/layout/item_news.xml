<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Изображение новости -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/img_2" />

        </androidx.cardview.widget.CardView>

        <!-- Заголовок новости -->
        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_semibold"
            android:maxLines="2"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            tools:text="Важная новость о развитии технологий в мире" />

        <!-- Краткое описание -->
        <TextView
            android:id="@+id/text_view_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter"
            android:maxLines="3"
            android:textSize="14sp"
            tools:text="В Узбекистане — резонансные задержания и решительные реформы. Хоким Шараф-Рашидовского района пойман с поличным при получении взятки, в филиале UzTest раскрыто хищение дорогостоящего оборудования. Президент Шавкат Мирзиёев поделился личным опытом в дорожной пробке Ташкента и поручил устранить незаконные ограничения, мешающие горожанам. Также в стране стартует" />

        <!-- Метаинформация -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Категория -->
            <TextView
                android:id="@+id/text_view_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_chip_category"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                tools:text="Политика" />

            <!-- Индикатор релевантности -->
            <TextView
                android:id="@+id/text_view_relevant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_chip_relevant"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:text="Релевантно"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Дата публикации -->
            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:textSize="12sp"
                tools:text="2 часа назад" />

        </LinearLayout>


        <!-- Источник -->
        <TextView
            android:id="@+id/text_view_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/inter"
            android:gravity="center_vertical"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_source"
            tools:text="Источник: Kun.uz" />

        <!-- Кнопки действий -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Кнопка избранного -->
            <ImageView
                android:id="@+id/button_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Добавить в избранное"
                android:padding="8dp"
                android:src="@drawable/ic_favorite_outline" />

            <!-- Кнопка поделиться -->
            <ImageView
                android:id="@+id/button_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Поделиться"
                android:padding="8dp"
                android:src="@drawable/ic_share" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Кнопка "Читать далее" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_read_more"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Читать"
                android:textSize="12sp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:iconSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>